{
  "[css]": {
    "editor.defaultFormatter": "dprint.dprint"
  },
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[javascript]": {
    "editor.defaultFormatter": "dprint.dprint"
  },
  "[json]": {
    "editor.defaultFormatter": "dprint.dprint"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "dprint.dprint"
  },
  "[markdown]": {
    "editor.defaultFormatter": "dprint.dprint"
  },
  "[scss]": {
    // Stylelint can't be a formatter, so dprint (with malva) is used as the default formatter
    // @see https://github.com/stylelint/vscode-stylelint/issues/384
    "editor.defaultFormatter": "dprint.dprint",
    "editor.formatOnSave": false,
    "editor.codeActionsOnSave": {
      "source.fixAll.stylelint": "explicit"
    }
  },
  "[typescript]": {
    "editor.defaultFormatter": "dprint.dprint"
  },
  // Plugins
  "eslint.useESLintClass": true,
  "eslint.useFlatConfig": true,
  "livePreview.serverRoot": "projects",
  "stylelint.validate": [
    "css",
    "postcss",
    "scss",
    "html"
  ]
}
